{
  "name": "scrivener-mcp",
  "version": "0.3.1",
  "description": "MCP server for Scrivener - Read, analyze, and manipulate Scrivener writing projects. Features RTF parsing, document structure analysis, word counting, and AI-powered writing assistance for authors using Claude or other LLMs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "scrivener-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dcondrey/scrivener-mcp.git"
  },
  "homepage": "https://github.com/dcondrey/scrivener-mcp#readme",
  "bugs": {
    "url": "https://github.com/dcondrey/scrivener-mcp/issues"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "npm run build && npm run test:legacy && npm run test:new && npm run test:enhancements",
    "test:legacy": "node tests/test-rtf.js && node tests/test-scrivener.js && node tests/test-edge-cases.js",
    "test:new": "node tests/test-memory-manager.js && node tests/test-content-analyzer.js && node tests/test-content-enhancer.js",
    "test:enhancements": "node tests/test-enhancements.js",
    "test:memory": "npm run build && node tests/test-memory-manager.js",
    "test:analyzer": "npm run build && node tests/test-content-analyzer.js",
    "test:enhancer": "npm run build && node tests/test-content-enhancer.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepare": "npm run build",
    "postinstall": "echo 'Please see SETUP.md for manual configuration instructions'",
    "uninstall": "node scripts/uninstall.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/xml2js": "^0.4.14",
    "better-sqlite3": "^12.2.0",
    "cheerio": "^1.1.2",
    "compromise": "^14.14.4",
    "compromise-adjectives": "^0.0.7",
    "compromise-dates": "^3.7.1",
    "compromise-numbers": "^1.4.0",
    "natural": "^8.1.0",
    "neo4j-driver": "^5.28.1",
    "openai": "^5.19.1",
    "pos": "^0.4.2",
    "rtf-parser": "^1.3.3",
    "sentiment": "^5.0.2",
    "turndown": "^7.2.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "scrivener",
    "claude",
    "writing",
    "rtf",
    "document-analysis",
    "manuscript",
    "novel",
    "book",
    "author",
    "ai",
    "gpt",
    "llm",
    "interface"
  ],
  "author": "David Condrey <davidcondrey@me.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
