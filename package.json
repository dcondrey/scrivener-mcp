{
  "name": "scrivener-mcp",
  "version": "0.3.4",
  "description": "MCP server for Scrivener - Read, analyze, and manipulate Scrivener writing projects. Features RTF parsing, document structure analysis, word counting, and AI-powered writing assistance for authors using Claude or other LLMs.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "scrivener-mcp": "dist/index.js",
    "scrivener-setup": "dist/cli/setup-wizard.js"
  },
  "files": [
    "dist",
    "scripts",
    "assets",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dcondrey/scrivener-mcp.git"
  },
  "homepage": "https://github.com/dcondrey/scrivener-mcp#readme",
  "bugs": {
    "url": "https://github.com/dcondrey/scrivener-mcp/issues"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "dev": "tsx watch src/index-refactored.ts",
    "start": "node dist/index-refactored.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:legacy": "node tests/test-rtf.js && node tests/test-scrivener.js && node tests/test-edge-cases.js",
    "setup": "node dist/cli/setup-wizard.js",
    "setup:neo4j": "NEO4J_AUTO_INSTALL=true node dist/index.js",
    "setup:advanced": "node scripts/setup-advanced.cjs",
    "setup:quick": "node scripts/setup-advanced.cjs --quick",
    "health": "node scripts/setup-advanced.cjs --health",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "prepare": "npm run build",
    "postinstall": "node scripts/postinstall.cjs",
    "uninstall": "node scripts/uninstall.js"
  },
  "dependencies": {
    "@langchain/core": "^0.3.75",
    "@langchain/openai": "^0.6.11",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ioredis": "^4.28.10",
    "@types/xml2js": "^0.4.14",
    "better-sqlite3": "^12.2.0",
    "bullmq": "^5.58.5",
    "chalk": "^5.6.0",
    "cheerio": "^1.1.2",
    "compromise": "^14.14.4",
    "compromise-adjectives": "^0.0.7",
    "compromise-dates": "^3.7.1",
    "compromise-numbers": "^1.4.0",
    "ioredis": "^5.7.0",
    "keydb": "^0.1.10",
    "langchain": "^0.3.33",
    "natural": "^8.1.0",
    "neo4j-driver": "^5.28.1",
    "openai": "^5.19.1",
    "pos": "^0.4.2",
    "rtf-parser": "^1.3.3",
    "sentiment": "^5.0.2",
    "turndown": "^7.2.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cheerio": "^0.22.35",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.0.0",
    "@types/turndown": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "scrivener",
    "claude",
    "writing",
    "rtf",
    "document-analysis",
    "manuscript",
    "novel",
    "book",
    "author",
    "ai",
    "gpt",
    "llm",
    "interface"
  ],
  "author": "David Condrey <davidcondrey@me.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
