# Scrivener MCP Database Configuration
# Copy this file to .env and update with your values

# Neo4j Auto-Installation (Optional)
# Set to true to automatically install Neo4j if not available
NEO4J_AUTO_INSTALL=false
# Set to false to skip interactive prompts during installation
NEO4J_INTERACTIVE=true

# Neo4j Configuration (Optional)
# If not provided, will use defaults or run without Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password
NEO4J_DATABASE=scrivener

# For Neo4j AuraDB (cloud):
# NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=your-aura-password
# NEO4J_DATABASE=neo4j

# OpenAI Configuration (Optional)
# For AI-powered content enhancement
OPENAI_API_KEY=your-openai-api-key